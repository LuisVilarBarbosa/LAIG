		<scale x="4" y ="2.5" z="0" />
		
		
      </transformation>

      <materials>
        <material id="primer_material" />
        <material id="donut_material" />
        <material id="green_material" />
      </materials>

      <texture id="white_wall" />

      <children>
        <primitiveref id="rectangle" />
      </children>
    </component>
	
	<component id="wall_1">
      <transformation>
		<translate x="2" y ="1.250" z="0" />
      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

      <texture id="inherit" />

      <children>
        <componentref id="wall" />
      </children>
    </component>
	
	<component id="wall_2">
      <transformation>
		<translate x="0" y ="1.250" z="2" />
		<rotate axis="y" angle="90" />
		
		
      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

      <texture id="inherit" />

      <children>
        <componentref id="wall" />
      </children>
    </component>
	
	<!-- LAMP -->
	<component id="lamp">
      <transformation>
		<translate x="1" y ="0" z="3" />
		<scale x="0.5" y ="1" z="0.5" />
      </transformation>

      <materials>
        <material id="primer_material" />
      </materials>

      <texture id="inherit" />

      <children>
		<componentref id="lamp_shaft" />
        <componentref id="lamp_base" />
		<componentref id="lamp_lampshade" />
      </children>
    </component>
	
	<component id="lamp_base">
      <transformation>
		<scale x="1.5" y ="0.1" z="1.5" />
		<rotate axis="x" angle="-90" />
      </transformation>

      <materials>
        <material id="inherit" />
		<material id="blue_material" />
      </materials>

      <texture id="metal" />

      <children>
        <primitiveref id="cylinder" />
      </children>
    </component>
	
	<component id="lamp_shaft">
      <transformation>
		<scale x="0.13" y ="2" z="0.13" />
		<rotate axis="x" angle="-90" />
      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

      <texture id="wood" />

      <children>
        <primitiveref id="cylinder" />
      </children>
    </component>
	
	<component id="lamp_lampshade">
      <transformation>
		<translate x="0" y ="1.7" z="0" />
		<rotate axis="x" angle="-90" />
		<scale x="1.5" y ="1.5" z="0.45" />
		
		
      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

