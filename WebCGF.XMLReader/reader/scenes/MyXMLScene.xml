      </children>
    </component>

    <component id="triangle_1">
      <transformation>
        <translate x="0" y="0" z="0.5" />
        <rotate axis="x" angle="-30" />
      </transformation>

      <materials>
        <material id="inherit" />
      </materials>

      <texture id="inherit" />

      <children>
